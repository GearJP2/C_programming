#include <stdio.h>

int main()
{
    int i = 0, j = 0;
    int n = 0;
    int temp = 0;

    scanf("%d", &n);

    float *ptr;
    float a[n];
    ptr = &a[0];
    float sum = 0;

    for (i = 0; i < n; i++)
    {
        scanf("%f", (ptr+i));
        sum += *(ptr+i);
    }

    float avg = sum / n;
    float min = *ptr;
    float max = *ptr;
    int ind_max, ind_min;
    i = 0;

    while (i < n)
    {
        if (min > *(ptr+i))
        {
            min = *(ptr+i);
            ind_min = i;
        }
        else if (max < *(ptr+i))
        {
            max = *(ptr+i);
            ind_max = i;
        }
        i++;
    }
    printf("Maximum value: %10.2f\n", max);
    printf("Minimum value: %10.2f\n", min);
    printf("Maximum index: %10d\n", ind_max);
    printf("Minimum index: %10d\n", ind_min);
    printf("Average: %10.2f\n", avg);
    printf("Reverse order: ");

    for (i = n-1; i >= 0; i--)
    {
        printf("%.2f ", *(ptr+i));
    }

    printf("\nAbove average list: ");

    for (i = n - 1; i >= 0; i--)
    {
        if (avg < *(ptr+i))
        {
            printf("%.2f ", *(ptr+i));
        }
    }

    printf("\nNegative coordinates: ");

    for(i = 0; i <= n; i++)
    {
        for (j = i + 1; j <= n - 1; j++)
        { if (*(ptr+i) < 0 && *(ptr+j) < 0)
        {
            printf("(%.2f, %.2f), ", *(ptr+i), *(ptr+j));
        }
        }
    }
}